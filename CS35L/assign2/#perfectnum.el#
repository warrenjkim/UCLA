(* (expt 2 (- 607 1)) (- (expt 2 607) 1))


(log (* (expt 2 (- 607 1)) (- (expt 2 607) 1)) 2)
1.0e+INF

(defun count-bits (n)
  (setq count 0)
  (setq temp n)
  (while (> temp 0)
    (setq temp (/ temp 2))
    (setq count (+ count 1)))
  (message "%d bits to represent %d in binary" count n))
count-bits

(defvar number (* (expt 2 (- 607 1)) (- (expt 2 607) 1)))
number

(count-bits number)
"1213 bits to represent  in binary"


(logb number)

